<% if logged_in? %>
<% @user = current_user %>
<div id="userpanel">
        <h2 class="username"><%= @user.login %></h2>
        <ul>
            <li><a href="/sites" class="sites">My Sites</a></li> 
            <li><%= link_to "Logout", session_path(1), :method => :delete %></li>
        </ul>
</div>
<% else %>
<div id="userpanel">
     <h2 class="login">Log-in</h2>
     <div class="loginform">
        <%= render :partial => "sessions/login" %>
     </div> 
     <h2 class="register">Sign-up</h2>
     <div class="registration">
        <p>A basic account is free</p>
        <%= link_to "Register", new_user_path %>
     </div>
</div>

<% end %>
