<h1>Editing site</h1>

<%= error_messages_for :site %>

<% form_for(:site, :url => site_path(@site), :html => { :method => :put }) do |f| %>
  <p>
    <b>Url</b><br />
    <%= f.text_field :url %>
  </p>

  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Show', site_path(@site) %> |
<%= link_to 'Back', sites_path %>